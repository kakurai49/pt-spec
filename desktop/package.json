{
  "name": "pt-spec-desktop",
  "version": "0.1.0",
  "description": "Electron wrapper for local static assets",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "sync:web": "node ./scripts/sync-web.js",
    "dist:win": "electron-builder -w"
  },
  "build": {
    "appId": "com.ptspec.desktop",
    "productName": "PT Spec",
    "files": [
      "main.js",
      "preload.js",
      "app/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^30.0.9",
    "electron-builder": "^26.0.12"
  }
}
